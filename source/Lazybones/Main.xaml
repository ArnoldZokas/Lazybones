<Window x:Class="Lazybones.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:Lazybones="clr-namespace:Lazybones.UI"
		Title="Lazybones"
		SizeToContent="WidthAndHeight"
		ResizeMode="NoResize">
	<WrapPanel Width="300">
		<Lazybones:PushButton x:Name="ImWorkingButton" Height="50" Width="100">I'm Working</Lazybones:PushButton>
		<Lazybones:PushButton x:Name="ImRestingButton" Height="50" Width="100" IsEnabled="False">I'm Resting</Lazybones:PushButton>
		<Lazybones:PushButton x:Name="ImPlayingButton" Height="50" Width="100">I'm Playing</Lazybones:PushButton>
		<Lazybones:TimerDisplay x:Name="TimerDisplay">
			<TextBlock x:Name="WorkHourDisplay" FontSize="36" Width="150" TextAlignment="Center" Foreground="Red">00:00:00</TextBlock>
			<TextBlock x:Name="PlayHourDisplay" FontSize="36" Width="150" TextAlignment="Center" Foreground="Green">00:00:00</TextBlock>
		</Lazybones:TimerDisplay>
	</WrapPanel>
</Window>
